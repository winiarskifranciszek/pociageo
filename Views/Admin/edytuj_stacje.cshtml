
@{
    ViewBag.Title = "edytuj_stacje";
}
@model IEnumerable<Projekt.Models.dodajStacje>

<h2>Edycja stacji </h2>
<h2>Wybierz stację do edytowania</h2>
<hr>
<div class="jumbotron">


    <form action="/Admin/edit_wsad" method="post">
        <table class="table table-bordered" style="width:50%">
            <thead>
                <tr>
                    <th scope="row" style="width:30%">ID</th>
                    <th scope="row" style="width:30%">Nazwa</th>
                    <th scope="row" style="width:40%">Miejscowosc</th>
                    <th scope="row" style="width:20%">Wybierz</th>


                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Nazwa</td>
                        <td>@item.Miejscowosc</td>
                        <td>
                            <input type="hidden" name="nazwa" value="@item.Nazwa" />
                            <input type="hidden" name="miejscowosc" value="@item.Miejscowosc" />
                            <input id="Radio1" type="radio" name="Id" value="@item.Id" />
                        </td>


                    </tr>

                }

            </tbody>
        </table>
        <input type="submit" value="Wybierz stacje do edycji" />

    </form>
</div>

<div>
    @Html.ActionLink("Strona startowa", "Index", "Home")
</div>
